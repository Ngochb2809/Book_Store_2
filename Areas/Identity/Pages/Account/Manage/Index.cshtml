@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


@*<h3>@ViewData["Title"]</h3>*@
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post">
    <section class="vh-50 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Profile</h2>
                                

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating">
                                    <input asp-for="Username" class="form-control" disabled />Username
                                    <label  class="form-label"></label>
                                </div>
                                <br />
                                <div class="form-floating">
                                    <input asp-for="Input.PhoneNumber" class="form-control" />Phone number
                                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                                <br />
                                <button class="btn btn-outline-light btn-lg px-5" id="update-profile-button" type="submit">Save</button>
                                
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</form>




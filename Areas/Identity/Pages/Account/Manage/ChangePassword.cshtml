@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@*<h3>@ViewData["Title"]</h3>*@
<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" method="post">
    <section class="vh-50 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Change Password</h2>


                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating">
                                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />Current password
                                    <label asp-for="Input.OldPassword" class="form-label"></label>
                                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-floating">
                                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />New password
                                    <label asp-for="Input.NewPassword" class="form-label"></label>
                                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-floating">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />Comfirm new password
                                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <br />
                                <button id="update-profile-button" type="submit" class="btn btn-outline-light btn-lg px-5">Update password</button>
                                
                                

                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>

</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
